<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PokemonCapturadosFragment">

    <!-- RecyclerView para mostrar los Pokémon capturados -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_actualizar_pokedex" />

    <!-- Botón para actualizar el Pokédex -->
    <Button
        android:id="@+id/btn_actualizar_pokedex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar Pokédex"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.9" />  <!-- Ajustamos el valor de vertical_bias según sea necesario -->

</androidx.constraintlayout.widget.ConstraintLayout>
